<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="mb-4 mt-5">Ratings</h1>

  <table class="table table table-bordered">
    <thead>
      <tr>
        <th scope="col">Rating Agency</th>
        <th scope="col">Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ratings.each do |rating| %>
        <tr>
          <td><%= rating.rating_agency.rating_agency_name %></td>
          <td><%= rating.rating %></td>
          <td><%= link_to 'Show', rating %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Rating', new_rating_path %>
</div>
