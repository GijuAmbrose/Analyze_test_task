
  <%= form_with(model: security_type, validates: true, local: true) do |form| %>

    <div class="field d-flex">
      <div class="col-md-3 float-left">
       <%= form.label :issuer_name%>
      </div>
      <div class="col-md-6 float-left">
        <%= form.collection_select :issuer_id, Issuer.all, :id, :name, {:include_blank=> "Select Issuer Name"}, :class=> "ml-3 pl-2 pr-2 input-width"%>
      </div>
    </div>

    <div class="field d-flex">
      <div class="col-md-3 float-left">
        <%= form.label :security_type_name %>
      </div>
      <div class="col-md-6 float-left">
        <%= form.text_field :security_type_name, placeholder: "Enter Issuer Name", :class=> "ml-3 pl-2 pr-2 input-width" %>
      </div>
    </div>

    <div class="actions">
      <div class="col-12 float-left">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
