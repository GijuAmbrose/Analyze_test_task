<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="mb-4 mt-5">Issuers</h1>

  <table class="table table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issuers.each do |issuer| %>
        <tr>
          <td><%= issuer.name %></td>
          <td><%= link_to 'Show', issuer %></td>
          <td><%= link_to 'Edit', edit_issuer_path(issuer) %></td>
          <td><%= link_to 'Destroy', issuer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Issuer', new_issuer_path %>
</div>
