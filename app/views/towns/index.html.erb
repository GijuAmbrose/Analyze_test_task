<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="mb-4 mt-5">Towns</h1>

  <table class="table table table-bordered">
    <thead>
      <tr>
        <th scope="col">Town name</th>
         <th scope="col">State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @towns.each do |town| %>
        <tr>
          <td><%= town.town_name %></td>
          <td><%= town.state.state_name %></td>
          <td><%= link_to 'Show', town %></td>
          <td><%= link_to 'Edit', edit_town_path(town) %></td>
          <td><%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Town', new_town_path %>
