<div class="analysis-wrapper w-100 float-left mt-4">
    <div class="container">
        <form class="d-flex">
            <h6>Analysis</h6>
            <div class="inp-check ml-3">
                <input type="radio" alt="" id="goi" name="analysis" value="goi" />
                <label for="goi">GOI</label>
            </div>
            <div class="inp-check ml-3">
                <input type="radio" alt="" id="sdl" name="analysis" value="sdl" />
                <label for="sdl">SDL</label>
            </div>
            <div class="inp-check ml-3">
                <input type="radio" alt="" id="dtb" name="analysis" value="dtb" />
                <label for="dtb">DTB</label>
            </div>
            <div class="inp-check ml-3">
                <input type="radio" alt="" id="cor" name="analysis" value="cor" />
                <label for="cor">Corporate</label>
            </div>
        </form>
        <div class="d-flex row mt-3">
            <div class="d-analysis col-2 float-left">
                <label>By Name / ISIN</label>
                <input type="text" class="w-100" alt="" id="isin-filter" />
            </div>
            <div class="d-analysis col-2 float-left">
                <label>By Tenure</label>
                <input type="text" class="w-100" alt="" />
            </div>
            <div class="d-analysis col-2 float-left">
                <label>By Int. Freq.</label>
                <input type="text" class="w-100" alt="" />
            </div>
            <div class="d-analysis col-2 float-left">
                <label>By Maturity</label>
                <input type="text" class="w-100" alt="" />
            </div>
            <div class="d-analysis col-2 float-left">
                <label>Put / Call Opt.</label>
                <input type="text" class="w-100" alt="" />
            </div>
            <div class="d-analysis col-2 float-left">
                <label>Credit Rating</label>
                <input type="text" class="w-100" alt="" />
            </div>
        </div>

        <div class="analyse-tab-data">
          <%= render partial: "partials/table_results" , locals: { table_datas: @analyse_data} %>
        </div>
        <div class="w-100 d-flex">
            <button class="btn btn-primary ml-auto plot-graph">Analyse</button>
        </div>
    </div>
</div>
<script src="http://code.highcharts.com/highcharts.js"></script>
<div id="analyse-page-line-chart" style="display: inline-block;"></div>

<script type="text/javascript">

    $(document).ready(function() {

        var issue_date = [];
        var ytm_values = [];

        $("#isin-filter").on('change paste keyup', function() {
           $.ajax({
              url: '/filter_by',
              type: "GET",
              dataType: "script",
              data: {isis: $(this).val(), ajax_call: true},
              success: function(response) {
                console.log(true)
              }
            });
        });

        $(".plot-graph").on('click', function() {
          if($("input[name='plot-to-graph']:checked").length > 0){
            isin_array =[]
            ytm_values = []
            $.each($("input[name='plot-to-graph']:checked"), function(){
                isin_array.push($(".analyse-row-"+this.value).find('td')[0].innerText)
                ytm_values.push({name: $(".analyse-row-"+this.value).find('td')[0].innerText, data:[parseFloat($(".analyse-row-"+this.value).find('td')[5].innerText)]})
            });
            debugger
            Highcharts.chart('analyse-page-line-chart', {
              chart: {
                  type: 'column'
              },
              title: {
                  text: 'YTM Average Graph'
              },
              xAxis: {
                  categories: isin_array,
                  crosshair: true
              },
              yAxis: {
                  min: 0,
                  title: {
                      text: 'YTM (%)'
                  }
              },
              tooltip: {
                  headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                  pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                      '<td style="padding:0"><b>{point.y:.1f} mm</b></td></tr>',
                  footerFormat: '</table>',
                  shared: true,
                  useHTML: true
              },
              plotOptions: {
                  column: {
                      pointPadding: 0.2,
                      borderWidth: 0
                  }
              },
              series: [[1,2,3,4]]
          });

          }
          else{
            alert("Please select atleast one field to plot the graph.")
          }

        });

    });
</script>
